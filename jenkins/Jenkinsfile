pipeline {
    options {
        timeout(time: 30, unit: 'MINUTES')
    }
    agent any
    stages {
        stage('Checkout') {
            steps {
                dir(path: 'go/src/github.com/mobiledgex/edge-cloud') {
                    checkout scm
                }
                dir(path: 'go/src/github.com/mobiledgex/edge-proto') {
                    git url: 'git@github.com:mobiledgex/edge-proto.git'
                }
            }
        }
        stage('Build') {
            steps {
                dir(path: 'go/src/github.com/mobiledgex/edge-cloud') {
                    sh label: 'make clean', script: '''#!/bin/bash
export PATH=$PATH:$WORKSPACE/go/bin:$HOME/go/bin
export GOPATH=$WORKSPACE/go
make clean
                    '''
                }
                dir(path: 'go/src/github.com/mobiledgex/edge-cloud') {
                    sh label: 'git clean edge-cloud', script: 'git clean -f -d -x'
                }
                sh 'rm -f go.mod go.sum'
                dir(path: 'go/src/github.com') {
                    sh label: 'set up dependencies', script: '''#!/bin/bash
export PATH=$PATH:$WORKSPACE/go/bin:$HOME/go/bin
export GOPATH=$WORKSPACE/go

set -ex

if ! test -d grpc-ecosystem; then
    mkdir -p grpc-ecosystem
    cd grpc-ecosystem
    git clone https://github.com/mobiledgex/grpc-gateway.git
fi
                    '''
                }
                dir(path: 'go/src/github.com/mobiledgex/edge-cloud') {
                    sh label: 'make tools', script: '''#!/bin/bash
export PATH=$PATH:$WORKSPACE/go/bin:$HOME/go/bin
export GOPATH=$WORKSPACE/go
make tools
                    '''
                }
                dir(path: 'go/src/github.com/mobiledgex/edge-cloud') {
                    sh label: 'make', script: '''#!/bin/bash
export PATH=$PATH:$WORKSPACE/go/bin:$HOME/go/bin
export GOPATH=$WORKSPACE/go
make clean
make
                    '''
                }
            }
        }
        stage('Test') {
            options {
                timeout(time: 20, unit: 'MINUTES')
            }
            steps {
                lock('testbed') {
                    retry(2) {
                        sleep 10
                        dir(path: 'go/src/github.com/mobiledgex/edge-cloud') {
                            sh label: 'unit tests', script: '''#!/bin/bash
export PATH=$PATH:$WORKSPACE/go/bin:$HOME/go/bin:/usr/lib/postgresql/11/bin
export ANSIBLE_DIR=$WORKSPACE/go/src/github.com/mobiledgex/edge-cloud/setup-env/ansible
export GOPATH=$WORKSPACE/go
export GO111MODULE=on
make test-stop
make unit-test
                            '''
                        }
                    }
                    retry(2) {
                        sleep 10
                        dir(path: 'go/src/github.com/mobiledgex/edge-cloud') {
                            sh label: 'make test', script: '''#!/bin/bash
export PATH=$PATH:$WORKSPACE/go/bin:$HOME/go/bin:/usr/lib/postgresql/11/bin
export ANSIBLE_DIR=$WORKSPACE/go/src/github.com/mobiledgex/edge-cloud/setup-env/ansible
export GOPATH=$WORKSPACE/go
make test
                            '''
                        }
                    }
                }
            }
        }
        stage('Notify') {
            when {
                changeRequest()
                beforeAgent true
            }
            steps {
                slackSend color: 'good',
                          channel: '#ci-cd',
                          message: "<${env.CHANGE_URL}|Pull request PR-${env.CHANGE_ID}> ready for review: (${env.CHANGE_AUTHOR} \"${env.CHANGE_TITLE}\")"
            }
        }
    }
    post {
        success {
            slackSend color: 'good', message: "Build Successful - ${env.JOB_NAME} #${env.BUILD_NUMBER} (<${env.RUN_DISPLAY_URL}|Open>)"
        }
        failure {
            slackSend color: 'warning', message: "Build Failed - ${env.JOB_NAME} #${env.BUILD_NUMBER} (<${env.RUN_DISPLAY_URL}|Open>)"
        }
    }
}
